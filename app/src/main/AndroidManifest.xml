<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mustafaademkayaaslan.planfollowchallenger">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RealPlanApp"
        android:hardwareAccelerated="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3665001246595939~9010796332"/>

        <activity android:name="com.mustafaademkayaaslan.planfollowchallenger.view.SplashScreen"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.mustafaademkayaaslan.planfollowchallenger.view.TaskAddActivity"
            android:screenOrientation="portrait">
        </activity>


        <activity
            android:name="com.mustafaademkayaaslan.planfollowchallenger.view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RealPlanApp"
            android:screenOrientation="portrait">

        </activity>

    </application>

</manifest>